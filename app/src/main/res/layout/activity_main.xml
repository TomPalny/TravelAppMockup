<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.palny.travelappmockup.MainActivity"
    >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/trackImage"
            android:src="@drawable/street"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where would you like to tour?"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:id="@+id/whereToGo"
            android:layout_below="@id/trackImage"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="City, Country, Location, etc..."
            android:layout_below="@id/whereToGo"
            android:drawableRight="@drawable/search_glass"
            android:id="@+id/searchField"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What kind of track are you looking for?"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_below="@id/searchField"
            android:id="@+id/whatKind"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/whatKind"
            android:id="@+id/trackTypeSelector"
            >
        </Spinner>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/separator1"
            android:layout_below="@id/trackTypeSelector"
            android:id="@+id/separator1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/suggestALocalTrack"
            android:layout_below="@id/separator1"
            android:text="Suggest a Nearby Track"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:drawableRight="@drawable/arrow"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/separator1"
            android:layout_below="@id/suggestALocalTrack"
            android:id="@+id/separator2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recentSearches"
            android:layout_below="@id/separator2"
            android:text="My Recent Searches"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:drawableRight="@drawable/arrow"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/separator1"
            android:layout_below="@id/recentSearches"
            android:id="@+id/separator3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mostPopular"
            android:layout_below="@id/separator3"
            android:text="Most Popular Tracks"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:drawableRight="@drawable/arrow"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/separator1"
            android:layout_below="@id/mostPopular"
            android:id="@+id/separator4"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/popularLocations"
            android:layout_below="@id/separator4"
            android:text="Popular Locations"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:drawableRight="@drawable/arrow"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/separator1"
            android:layout_below="@id/popularLocations"
            android:id="@+id/separator5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addTrack"
            android:layout_below="@id/separator5"
            android:text="Add a Track"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:drawableRight="@drawable/arrow"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/separator1"
            android:layout_below="@id/addTrack"
            android:id="@+id/separator6"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rateTrack"
            android:layout_below="@id/separator6"
            android:text="Rate Previously Chosen Tracks"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:drawableRight="@drawable/arrow"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/separator1"
            android:layout_below="@id/rateTrack"
            android:id="@+id/separator7"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/settingsAndSignIn"
            android:layout_below="@id/separator7"
            android:text="Settings / Sign In"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:drawableRight="@drawable/arrow"
            />




    </RelativeLayout>
</ScrollView>